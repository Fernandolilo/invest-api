{
  "dashboard": {
    "id": null,
    "uid": "gateway-logs",
    "title": "Gateway Requests",
    "timezone": "browser",
    "schemaVersion": 37,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "table",
        "title": "Requests by IP",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "gateway_requests_total",
            "refId": "A"
          }
        ],
        "columns": [
          { "text": "Route", "value": "route" },
          { "text": "Status", "value": "status" },
          { "text": "IP", "value": "ip" },
          { "text": "Count", "value": "value" }
        ],
        "transform": "timeseries_to_rows"
      },
      {
        "type": "graph",
        "title": "Requests per Route",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rate(gateway_requests_total[1m])) by (route)",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "lines": true,
        "linewidth": 2,
        "fill": 1
      },
      {
        "type": "graph",
        "title": "Average Duration per Route",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(gateway_request_duration_seconds_sum[1m]) / rate(gateway_request_duration_seconds_count[1m])",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "lines": true,
        "linewidth": 2,
        "fill": 1,
        "yaxes": [
          { "format": "ms", "label": "Duration", "logBase": 1, "min": null, "max": null },
          { "format": "short", "show": false }
        ]
      }
    ]
  },
  "overwrite": true
}
